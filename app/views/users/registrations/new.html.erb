<div class="ui middle aligned center aligned grid">
  <div class="six wide column">

    <div class="ui icon warning message hidden">
          <i class="lock icon"></i>
          <div class="content">
            <div class="header">
              Login failed!
            </div>
            <p>You might have misspelled your username or password!</p>
          </div>
    </div>
    <h2 class="ui image header">
      <div class="content">
        Join us, It's Free
      </div>
    </h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),:html=>{:class=>"ui large form"}) do |f| %>
      <div class="ui   segment">
        
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.text_field :firstname, autofocus: true,placeholder: "First Name"%>
          </div>
        </div>

        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.text_field :lastname, autofocus: true,placeholder: "Last Name"%>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.email_field :email, autofocus: true,placeholder: "E-Mail address"%>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, autocomplete: "off",placeholder: "Enter password here" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :confirm_pass, autocomplete: "off",placeholder: "Enter password here" %>
          </div>
        </div>

        <button class="ui fluid large teal submit button">
        Register</button>
        <div class="ui horizontal divider">
          Or
        </div>
        <div  class="ui other-login">
            <button class="ui basic button">
              <i class=""> <img class="avatar ui image" src="/images/google.png"></i>
              <span> Google<span>            
            </button>

        </div>
      </div>
     <%end %>

    <div class="ui segment">
      Already have an account? <a href="#">Login</a>
    </div>
  </div>
</div>


