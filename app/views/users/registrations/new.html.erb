<div class="wrapper">
    <div class="register-background">
        <div class="filter-black">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1 ">
                        <div class="register-card col-md-6">
                            <h3 class="title">Join itâ€™s free</h3>
                            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                              <%= devise_error_messages! %>
                              <%= f.label :firstname %>
                              <%= f.text_field :firstname, autofocus: true,placeholder: "First Name", class: 'form-control' %>
                            
                              <%= f.label :lastname %>
                              <%= f.text_field :lastname, autofocus: true,placeholder: "Last Name", class: 'form-control' %>
                            
                              <%= f.label :email %>
                              <%= f.text_field :email, autofocus: true,placeholder: "Email", class: 'form-control' %>
                            
                              <%= f.label :password %>
                              <%= f.password_field :password, autofocus: true,placeholder: "Password", class: 'form-control' %>
                            
                              <%= f.label :password_confirmation %>
                              <%= f.password_field :password_confirmation, autofocus: true,placeholder: "Password", class: 'form-control' %>
                              <button class="btn btn-success btn-block">Register</button>
                            <%end%>
                        </div>
                    </div>
                </div>
            </div>                  
        </div>

    </div>
</div>
