<div class="main-content container" style="padding-top:5%;height: 87%">
  <div class="pusher" style="height: 100%">
    <div class="ui grid" style="height: 100%">
      <div class="four wide column verticalLine">
        <%= render partial: "filters"%>
      </div>
      <div id="cardsContainer" class="nine wide column" style="overflow:auto">
        <!--  grid to sort start here -->
        <div class="ui grid">
          <div class="three column row">
            <div class="right floated column">
              <div  class="sort-options" style="padding-left: 12%;">
                <select class="sort ui dropdown" >
                  <option value="">Sort by</option>
                  <option value="">Default</option>
                  <option value="no_of_openings">No of openings</option>
                  <option value="package_upper">Package</option>
                </select>
              </div>
            </div>
          </div>
        </div>
        <!--  grid to sort ends here -->
        <div class="ui  divider"></div>
        <div id="cards-container">
        </div>
      </div>
      <div class="three wide column">
        <!-- kept for ads -->
      </div>
    </div>
  </div>
</div>
<script>
$('.sort.ui.dropdown').dropdown({
    onChange: function(value, text, $selectedItem) {
      CampusConnect.Dashboard.sorted_cards(value);
    }
});


CampusConnect.Dashboard.cards();

$(".prompt.search-bar").keydown(function(event){
    if (event.keyCode == 13) {      
        var query = $(this).val();
        CampusConnect.Dashboard.search_openings(query);
    }
})

</script>
