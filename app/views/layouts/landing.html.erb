<!DOCTYPE html>
<html>
    <head>
        <title>College Connect</title>
        <%=stylesheet_link_tag "bootstrap/dist/css/bootstrap.min.css"%>
        <%=stylesheet_link_tag "bootstrap-datepicker/dist/css/bootstrap-datepicker3.min.css"%>
        <%=stylesheet_link_tag "bootstrap-select/dist/css/bootstrap-select.min.css"%>
        <%=stylesheet_link_tag "paperkit/assets/css/ct-paper.css"%>
        <%=stylesheet_link_tag "paperkit/assets/css/demo.css"%>
        <%=stylesheet_link_tag "paperkit/assets/css/examples.css"%>
        <%=stylesheet_link_tag "application.css"%>
        <%= csrf_meta_tags %>
    </head>

    <body>
        <%=javascript_include_tag "jquery/dist/jquery.min.js"%>
        <%=javascript_include_tag "/stylesheets/bootstrap/dist/js/bootstrap.min.js"%>
        <%=javascript_include_tag "/stylesheets/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"%>
        <%=javascript_include_tag "/stylesheets/bootstrap-select/dist/js/bootstrap-select.min.js"%>
        <%=javascript_include_tag "/stylesheets/jquery-ui/jquery-ui.min.js"%>
        <%=javascript_include_tag "/stylesheets/paperkit/assets/js/ct-paper.js"%>
        <%=javascript_include_tag "/stylesheets/paperkit/assets/js/ct-paper-checkbox.js"%>
        <%=javascript_include_tag "/stylesheets/paperkit/assets/js/ct-paper-radio.js"%>
        <%=javascript_include_tag "campus_connect/utilities.js"%>
        <%=javascript_include_tag "campus_connect/locations.js"%>
        <%= javascript_include_tag 'handlebars-v4.0.5.js' %>

        <%= render 'layouts/header' %>
        <%=yield%>

        <%= render :partial=>"colleges/location_handlebar" %>
        <script type="text/javascript">
          $(document).ready(function () {
              CampusConnect.Locations.init();
          });

        </script>
    </body>
</html>
